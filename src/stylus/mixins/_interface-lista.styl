.interface-lista
  display flex
  margin-bottom 10px
  align-items center

  &>div:first-child
    flex auto

    input, select
      background escala-cinza-1
      border solid 1px escala-cinza-3
      padding 5px 15px
      margin 2px

    button
      background-color laranja
      color escala-cinza-1
      padding 6px 15px
      margin 2px

    *:first-child
      border-radius 10px 0 0 10px

    *:last-child
      border-radius 0 10px 10px 0

  &>div:last-child button
    background laranja
    //font-weight bold
    color escala-cinza-1
    padding 6px 30px
    border-radius 10px


