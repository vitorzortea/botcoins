.info-app
  padding 20px
  background escala-cinza-2

  img
    padding-right 20px

  h2
    font-size 36px
    text-transform uppercase
    padding-bottom 10px

  p
    font-size 16px
    color escala-cinza-8

.info-2fa
  padding 20px 0

  img
    width 100%
    padding 3px
    background-image url('/assets/img/border-qr-code.png')
    background-size 100% 100%
    background-position center

  p
    font-size 16px
    color escala-cinza-8

  .codigo-destaque
    display table
    background escala-cinza-3
    padding 10px 30px
    border-radius 10px
    margin-top 15px
    font-size 18px
    letter-spacing 2px

  .main-form>div
    display flex
    flex-wrap wrap
    min-height 100%
    padding-left 20px

    &>div
      width 100%

    &>div:last-child
      display flex
      flex-wrap wrap
      min-height 100%
      align-items flex-end

      &>div
        width 100%

  form
    display flex

    p
      width 100%
      font-weight bold
      font-size 18px
      margin-bottom 15px

    input
      border solid 1px escala-cinza-5
      border-radius 10px
      padding 10px
      flex auto
      margin-right 10px

    button
      background laranja
      color escala-cinza-1
      padding 10px 30px
      border-radius 10px
      font-weight bold


